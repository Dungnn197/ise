<% if current_user.enrolls.last.id == event.id %>
  <%= link_to t(".enrolling"), user_enroll_event_path(event_id: event.id),
    method: :delete, remote: true, class: "button button-text" %>
<% else %>
  <%= link_to t(".enroll"), user_enroll_events_path(event_id: event.id),
    method: :post, remote: true, class: "btn button-text-default" %>
<% end %>
