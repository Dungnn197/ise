<div class="content">
  <h2><%= t ".change_password" %> <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, disabled: true %>
    </div>
    <br/>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t ".email_confirmation" %>: <%= resource.unconfirmed_email %></div>
    <% end %>
    <br/>

    <div class="field">
      <%= f.label :password, t(".password") %>
      <i>(<%= t ".change_message" %>)</i><br/>
      <%= f.password_field :password, autocomplete: "new-password", autofocus: true %>
      <% if @minimum_password_length %>
        <br/>
        <em><%= t(".minimum_character", count: @minimum_password_length) %></em>
      <% end %>
    </div>
    <br/>

    <div class="field">
      <%= f.label :password_confirmation, t(".password_confirmation") %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <br/>

    <div class="field">
      <%= f.label :current_password, t(".current_password") %>
      <i>(<%= t ".current_password_message" %>)</i><br/>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <br/>

    <div class="actions">
      <%= f.submit t(".update") %> <%= link_to t(".back"), :back %>
    </div>
  <% end %>
</div>
